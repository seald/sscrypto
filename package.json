{
  "name": "sscrypto",
  "version": "1.0.0-2",
  "description": "Super Simple Cryptography",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .js,.ts src",
    "pretest": "npm run lint",
    "test": "mocha --require ts-node/register --require source-map-support/register --timeout 30000 src/tests/test-node.spec.ts",
    "test-report": "npm run test -- --reporter mocha-multi-reporters --reporter-options configFile=./mochaReportConfig.json --forbid-only",
    "pretest-browser": "npm run lint && npm run build && webpack --progress --hide-modules --display-error-details --mode development",
    "test-browser": "xvfb-maybe karma start karma.conf.local.js",
    "pretest-saucelabs": "npm run pretest-browser",
    "test-saucelabs": "mocha --require source-map-support/register run-karma-saucelabs.spec.js",
    "prebuild": "rm -rf ./forge ./node ./utils ./tests ./webcrypto index.js index.d.ts",
    "clean-reports": "rm -rf ./coverage ./.nyc_output ./test-results",
    "build": "tsc",
    "coverage": "nyc npm run test-report",
    "doc": "typedoc --theme markdown --out doc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seald/sscrypto"
  },
  "author": "Seald SAS",
  "license": "MIT",
  "dependencies": {
    "asn1.js": "^5.4.1",
    "crc-32": "^1.2.0"
  },
  "peerDependencies": {
    "node-forge": "^0.9.1"
  },
  "devDependencies": {
    "@jsdevtools/coverage-istanbul-loader": "^3.0.3",
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/jsbn": "^1.2.29",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.14",
    "@types/node-forge": "^0.9.4",
    "@types/pump": "^1.1.0",
    "@types/pumpify": "^1.4.1",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.3.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-standard": "^4.0.1",
    "jsbn": "^1.1.0",
    "karma": "^5.1.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-firefox-launcher": "^1.3.0",
    "karma-fixture": "^0.2.6",
    "karma-junit-reporter": "^2.0.1",
    "karma-mocha": "^2.0.1",
    "karma-safari-launcher": "^1.0.0",
    "karma-sauce-launcher": "^4.1.5",
    "karma-source-map-support": "^1.4.0",
    "mocha": "^8.0.1",
    "mocha-junit-reporter": "^2.0.0",
    "mocha-multi-reporters": "^1.1.7",
    "node-forge": "^0.9.1",
    "nyc": "^15.1.0",
    "pump": "^3.0.0",
    "sauce-connect-launcher": "^1.3.2",
    "source-map-loader": "^1.0.0",
    "source-map-support": "^0.5.19",
    "standard": "^14.3.4",
    "ts-node": "^8.10.2",
    "typedoc": "^0.17.7",
    "typedoc-plugin-markdown": "^2.3.1",
    "typescript": "3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "xvfb-maybe": "^0.2.1"
  }
}
