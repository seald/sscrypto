{
  "name": "sscrypto",
  "version": "0.4.2",
  "description": "Super Simple Cryptography",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .js,.ts src",
    "pretest": "npm run lint && npm run build",
    "test": "mocha --require source-map-support/register --timeout 30000 tests/test-node.spec.js",
    "test-report": "npm run test -- --reporter mocha-multi-reporters --reporter-options configFile=./mochaReportConfig.json --forbid-only",
    "pretest-browser": "npm run pretest && webpack --progress --hide-modules --display-error-details",
    "test-browser": "xvfb-maybe karma start karma.conf.local.js",
    "pretest-saucelabs": "npm run pretest-browser",
    "test-saucelabs": "karma start karma.conf.saucelabs.js",
    "prebuild": "rm -rf ./forge ./node ./utils ./tests index.js index.d.ts",
    "build": "tsc",
    "coverage": "nyc npm run test-report",
    "doc": "typedoc --theme markdown --out doc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seald/sscrypto"
  },
  "author": "Seald SAS",
  "license": "MIT",
  "dependencies": {
    "asn1.js": "^5.3.0",
    "crc-32": "^1.2.0"
  },
  "peerDependencies": {
    "node-forge": "^0.9.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/jsbn": "^1.2.29",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.5",
    "@types/node-forge": "^0.9.3",
    "@types/pump": "^1.1.0",
    "@types/pumpify": "^1.4.1",
    "@typescript-eslint/eslint-plugin": "^3.0.1",
    "@typescript-eslint/parser": "^3.0.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.1.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-standard": "^4.0.1",
    "jsbn": "^1.1.0",
    "karma": "^5.0.9",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^1.3.0",
    "karma-fixture": "^0.2.6",
    "karma-junit-reporter": "^2.0.1",
    "karma-mocha": "^2.0.1",
    "karma-sauce-launcher": "^4.1.5",
    "karma-source-map-support": "^1.4.0",
    "mocha": "^7.2.0",
    "mocha-junit-reporter": "^2.0.0",
    "mocha-multi-reporters": "^1.1.7",
    "node-forge": "^0.9.1",
    "nyc": "^15.0.1",
    "pump": "^3.0.0",
    "source-map-loader": "^1.0.0",
    "source-map-support": "^0.5.19",
    "standard": "^14.3.4",
    "typedoc": "^0.17.7",
    "typedoc-plugin-markdown": "^2.2.17",
    "typescript": "^3.9.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "xvfb-maybe": "^0.2.1"
  }
}
